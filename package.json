{
  "name": "@hgraph/cli",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Hypergraph commands",
  "author": {
    "name": "Rinto Jose",
    "email": "rintoj@gmail.com"
  },
  "bin": {
    "hypergraph": ".bin/cli"
  },
  "repository": "https://github.com/rintoj/hypergraph-cli.git",
  "scripts": {
    "test": "jest",
    "lint": "eslint --fix && tsc -p . --noEmit && yarn prettier",
    "prettier": "prettier --write \"**/src/**/*.{ts,tsx}\" -c",
    "build": "rimraf dist && tsc -p .",
    "semantic-release": "semantic-release",
    "cli": "ts-node src/index.ts",
    "start": "rimraf dist && tsc -p . --watch"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@apollo/client": "^3.7.17",
    "cli-highlight": "^2.1.11",
    "cli-spinner": "^0.2.10",
    "clifer": "^1.2.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "gql-hook-codegen": "^1.0.21",
    "graphql": "^16.7.1",
    "js-yaml": "^4.1.0",
    "node-fetch": "2.6.6",
    "open": "^9.1.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "shelljs": "^0.8.5",
    "string-width": "2.0.0",
    "tsds-tools": "^1.0.6"
  },
  "devDependencies": {
    "@types/cli-spinner": "^0.2.3",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.16",
    "@types/node-fetch": "^2.6.4",
    "@types/shelljs": "^0.8.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "collectCoverage": false,
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
          ],
          "isolatedModules": true,
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/src/decorators/**",
      "!**/src/error/**",
      "!**/test/**"
    ]
  },
  "release": {
    "branches": [
      "master"
    ]
  }
}
